    <a href="/">-SP-</a>
  </p>
  <li class="dropdown">
    <p class="dropbtn">Menu</p>
    <div class="dropdown-content">
      <a href="/gallery">Gallery</a>
      <a href="/about">About</a>
    </div>
  </li>
</div>

<div class="row">
    <div id="form-div">
        <form id="contact-form" form action="/contact" method="post" onsubmit="return alert('Success! Your message has been sent!');">
            <div class="form-group form-name">
                <label for="name">Name</label>
                <input type="name" class="form-control form-name" type="text" name="name" id="name" placeholder="Your name" required>
            </div>
            <div class="form-group form-email">
                <label for="email">Email</label>
                <input type="email" class="form-control form-email" type="text" name="email" id="email" placeholder="Your email address">
            </div>
            <div class="form-group form-subject">
                <label for="location">Subject</label>
                <input class="form-control form-subject" type="text" name="subject" id="subject" placeholder="Title of email" required>
            </div>
            <div class="form-group form-text">
                <label for="description">Description</label>
                <textarea class="form-control form-message" type="text" name="description" id="description" placeholder="Description" rows="10" required></textarea>
            </div>
            <div class="form-group form-button">
                <!-- <input type="submit" name="submit" value="Submit" class="form-submit"> -->
                <button type="submit" class="btn btn-lg btn-primary btn-block">Send</button>
            </div>
        </form>
    </div>
</div>

</div>

